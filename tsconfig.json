{
  "compilerOptions":{
    "target":"ES2015",
    "module":"ESNext",
    "moduleResolution":"node",
    "esModuleInterop": true,
    "strict": true,
    "lib": ["ESNext", "DOM"],
    "baseUrl": ".",
    "paths": {
      "~/*": ["src/*"]
    },
  },
  "include":[
    "src/**/*",
    "types/**/*"
  ],
  "exclude": ["node_modules","dist"]
}